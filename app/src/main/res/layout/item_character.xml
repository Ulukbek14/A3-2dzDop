<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10sp"
    android:layout_height="128dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/costum_constrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_iv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:src="@tools:sample/avatars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/item_tv_character_nameText"
            android:text="Name:"
            android:textColor="#9F9E9E"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_character_name"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_nameText"
            android:layout_marginTop="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="130dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="155dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_character_status"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_name"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="115dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>