<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="5dp"
    android:background="#191818"
    app:cardCornerRadius="14dp"
     android:layout_width="match_parent"
    android:layout_height="150dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/costum_constrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_iv"
            tools:src="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_tv_character_name"
            tools:text="@tools:sample/first_names"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/item_iv"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="-"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_name"
            app:layout_constraintLeft_toRightOf="@id/item_tv_character_status"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_character_status"
            tools:text="Alive"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_name"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/item_iv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_character_species"
            tools:text="Human"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_name"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/item_tv_character_status"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_character_genderText"
            android:text="Last known location:"
            android:textColor="#9F9E9E"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_species"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/item_iv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_tv_character_gender"
            tools:text="@tools:sample/last_names"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_character_genderText"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toRightOf="@id/item_iv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>